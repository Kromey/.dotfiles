# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    eval "`dircolors -b`"
    alias ls='ls --color=auto'
    alias dir='dir --color=auto'
    alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# some more ls aliases
alias ll='ls -Fhl'
alias lt='ll -t'
alias la='ll -a'
alias l.='ll -d .*'

alias rmdir='rm -rf'

# Some handy grep aliases
alias igrep='grep -i'
alias cgrep='grep -c'
alias icgrep='grep -ic'
alias cigrep=icgrep

# Since I too-often cat binary files, make cat safe (against me)...
alias cat='cat -v'

# Alias of wc (word count) for line counting
alias lc='wc -l'

# Who the heck ever heard of a calculator without FP??
alias bc='bc -l'

#This one breaks actually using mount...
#alias mount='mount | column -t'

alias usage='du -h | awk '"'"'END{print $1}'"'"''

alias meminfo='free -mlt'

# get top process eating memory
alias psmem='ps auxf | sort -nr -k 4'
alias psmem10='ps auxf | sort -nr -k 4 | head -10'

# get top process eating cpu ##
alias pscpu='ps auxf | sort -nr -k 3'
alias pscpu10='ps auxf | sort -nr -k 3 | head -10'

# a better clear
alias clear='echo -en "\033c"'
alias cls=clear

# just for funsies
# TODO: Guard conditions to fail gracefully if library not installed
alias xmas='perl -MAcme::POE::Tree -e "Acme::POE::Tree->new()->run()"'

